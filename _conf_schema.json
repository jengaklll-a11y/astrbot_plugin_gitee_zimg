{
    "api_key": {
        "description": "Gitee API Key (支持多Key)",
        "type": "list",
        "default": [],
        "obvious_hint": false
    },
    "size": {
        "description": "文生图默认分辨率 (仅z-image-turbo生效)",
        "type": "string",
        "default": "1:1 (2048×2048)",
        "options": [
            "1:1 (2048×2048)",
            "3:4 (1536×2048)",
            "4:3 (2048×1536)",
            "2:3 (1360×2048)",
            "3:2 (2048×1360)",
            "9:16 (1152×2048)",
            "16:9 (2048×1152)"
        ]
    },
    "num_inference_steps": {
        "description": "迭代步数",
        "hint": "默认9，数值越大越精细但越慢",
        "type": "int",
        "default": 9,
        "slider": {
            "min": 1,
            "max": 50,
            "step": 1
        }
    },
    "timeout_seconds": {
        "description": "任务超时时间(秒)",
        "hint": "Gitee高峰期排队较久，建议设置 180 以上",
        "type": "int",
        "default": 300,
        "slider": {
            "min": 60,
            "max": 600,
            "step": 30
        }
    },
    "retention_hours": {
        "description": "临时图片保留时长/小时 (0为不删除)",
        "type": "float",
        "default": 1.0,
        "slider": {
            "min": 0,
            "max": 72,
            "step": 0.5
        }
    },
    "auto_recall": {
        "description": "自动撤回时间(秒)",
        "hint": "0 为不撤回。设置后，机器人发送图片后会在指定时间后尝试撤回消息",
        "type": "int",
        "default": 0,
        "slider": {
            "min": 0,
            "max": 120,
            "step": 5
        }
    }
}
